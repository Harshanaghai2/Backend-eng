<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>My Blog - Home</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

<header class="site-header">
    <h1>My Blog</h1>
    <nav>
        <a href="/">Home</a>
        <a href="/addPost">Add Post</a>
    </nav>
</header>

<!-- Featured Post -->
<section class="hero">
    <% if (featuredPost) { %>
        <img src="<%= featuredPost.image %>" alt="<%= featuredPost.title %>" class="hero-img">
        <div class="hero-content">
            <h2><%= featuredPost.title %></h2>
            <p>By - <%= featuredPost.date %></p>
            <a href="/post?id=<%= featuredPost.id %>" class="read-more">Read More</a>
        </div>
    <% } else { %>
        <p>No featured post available.</p>
    <% } %>
</section>

<!-- Posts List -->
<section class="container">
    <h2>Recent Posts</h2>
    <div class="post-grid">
        <% posts.forEach(post => { %>
            <div class="post-card">
                <img src="<%= post.image %>" alt="<%= post.title %>">
                <h3><%= post.title %></h3>
                <p><%= post.content.substring(0, 50) %>...</p>
                <a href="/post?id=<%= post.id %>" class="read-more">Read More</a>
            </div>
        <% }); %>
    </div>
</section>

<footer class="footer">
    <p>Â© 2025 My Blog. All Rights Reserved.</p>
</footer>

</body>
</html>
